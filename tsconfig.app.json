{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.{ts,js,vue}"],
  "exclude": ["src/**/__tests__/*", "src/**/demo/*.{ts,js,vue}", "src/**/stories/*.{ts,js,vue}"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "vue", "@vue/runtime-core"]
  }
}
